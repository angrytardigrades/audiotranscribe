import whisper
import os
import time
import torch

# --- Configuration ---
# üìÇ **SET THE PATH TO YOUR FOLDER CONTAINING AUDIO FILES HERE**
input_folder_path = "PATH TO AUDIO FILES" # <--- CHANGE THIS

# ‚úÖ Choose Whisper model size (e.g., "tiny", "base", "small", "medium", "large") --- > Large is heavy try small / medium or even smaller models 
#    Smaller models are faster but less accurate. "medium" is a good balance.
model_size = "medium"

# ‚úÖ Define supported audio file extensions
supported_extensions = ('.mp3', '.wav', '.m4a', '.flac', '.ogg', '.aac') # Add more if needed -- > .WAV is really good

# --- Setup ---
# ‚úÖ Auto-detect GPU if available, else use CPU
device = "cuda" if torch.cuda.is_available() else "cpu"
print(f"\U0001F4E5 Loading Whisper model ('{model_size}') on {device.upper()}...")

# ‚úÖ Load Whisper model
try:
    model = whisper.load_model(model_size, device=device)
    print(f"‚úÖ Model '{model_size}' loaded successfully!\n")
except Exception as e:
    print(f"‚ùå Error loading Whisper model: {e}")
    print("Please ensure Whisper and its dependencies (like ffmpeg) are installed correctly.")
    exit() # Exit if model loading fails

# ‚úÖ Check if input folder exists
if not os.path.isdir(input_folder_path):
    raise FileNotFoundError(f"‚ùå Error: Input folder not found at {input_folder_path}")

# ‚úÖ Create output directory inside the input folder
output_dir = os.path.join(input_folder_path, "output_transcriptions")
os.makedirs(output_dir, exist_ok=True)
print(f"üìÇ Transcriptions will be saved in: {output_dir}\n")

# --- Processing Loop ---
total_start_time = time.time()
files_processed = 0
files_skipped = 0

print("--- Starting Batch Transcription ---")

# ‚úÖ Iterate through all files in the specified folder
for filename in os.listdir(input_folder_path):
    # Construct full file path
    input_file_path = os.path.join(input_folder_path, filename)

    # ‚úÖ Check if it's a file and has a supported audio extension
    if os.path.isfile(input_file_path) and filename.lower().endswith(supported_extensions):
        print(f"\n‚ñ∂Ô∏è Processing file: {filename}")
        files_processed += 1

        # ‚úÖ Generate output file name (replace audio extension with .txt)
        base_name, _ = os.path.splitext(filename)
        output_file_path = os.path.join(output_dir, f"{base_name}.txt")

        try:
            print("  üéôÔ∏è Transcribing... (this may take a while)")

            # ‚è≥ Start timer for this file
            file_start_time = time.time()

            # ‚úÖ Transcribe audio (adjust parameters as needed)
            #    word_timestamps=False for faster processing if you don't need word timings
            #    verbose=True prints progress during transcription
            result = model.transcribe(input_file_path, word_timestamps=False, verbose=False) # Set verbose=True for more detail

            # ‚è±Ô∏è End timer for this file
            file_elapsed_time = time.time() - file_start_time

            # ‚úÖ Ensure transcription has content
            transcription_text = result.get("text", "").strip()
            if not transcription_text:
                print(f"  ‚ö†Ô∏è Warning: No transcription text found for {filename}. Skipping saving.")
                continue # Skip to the next file

            # ‚úÖ Save transcription
            print(f"  üìÑ Saving transcription to: {output_file_path}")
            with open(output_file_path, "w", encoding="utf-8") as f:
                f.write(transcription_text + "\n") # Add newline at the end

            print(f"  ‚úÖ Finished '{filename}' in {file_elapsed_time:.2f} seconds.")

        except FileNotFoundError:
             print(f"  ‚ùå Error: File not found during processing (should not happen): {filename}")
        except Exception as e:
            print(f"  ‚ùå Error during transcription for {filename}: {e}")
            # Optionally, decide if you want to stop or continue with the next file

    elif os.path.isfile(input_file_path):
        # Optional: Log files that are skipped because of their extension
        # print(f"  ‚ö™ Skipping non-audio file: {filename}")
        files_skipped += 1
    # else: it's a directory, ignore it

# --- Summary ---
total_elapsed_time = time.time() - total_start_time
print("\n--- Batch Transcription Complete ---")
print(f"üìä Processed {files_processed} audio file(s).")
print(f"‚ö™ Skipped {files_skipped} non-audio file(s).")
print(f"‚è±Ô∏è Total processing time: {total_elapsed_time:.2f} seconds.")
print(f"üìÇ All transcriptions saved in: {output_dir}")
